###
# python
###

export_alias python 'docker run --rm -it -v $(pwd):/usr/src/app -w /usr/src/app --entrypoint python python:3 $@'
export_alias pip 'docker run --rm -it -v $(pwd):/usr/src/app -w /usr/src/app --entrypoint pip python:3 $@'
export_alias py 'docker run --rm -it -v $(pwd):/usr/src/app -w /usr/src/app --entrypoint /bin/sh python:3 $@'

